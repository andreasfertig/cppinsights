void B()
{
  static uint64_t __bbGuard;
  alignas(Bingleton) static char __bb[sizeof(Bingleton)];
  
  if( ! __bbGuard )
  {
    if( __cxa_guard_acquire(&__bbGuard) )
    {
      new (&__bb) Bingleton();
      __bbGuard = true;
      __cxa_guard_release(&__bbGuard);
    }
  }
}


Bingleton * B(bool c)
{
  static uint64_t __bbGuard;
  alignas(Bingleton) static char __bb[sizeof(Bingleton)];
  
  if( ! __bbGuard )
  {
    if( __cxa_guard_acquire(&__bbGuard) )
    {
      new (&__bb) Bingleton();
      __bbGuard = true;
      __cxa_guard_release(&__bbGuard);
    }
  }
  if(c) {
    return nullptr;
  } 
  
  return &*reinterpret_cast<Bingleton*>(__bb);
}



