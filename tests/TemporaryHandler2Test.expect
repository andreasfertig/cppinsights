// Constant return by value
// Result cannot be used as an lvalue
class X
{
  int i;
  
  public: 
  X(int ii);
  
  void modify();
  
  // inline X & operator=(X &&) noexcept = default;
};



X::X(int ii)
{
    i = ii;
}

void X::modify()
{
    i++;
}

X f5()
{
  return X(0);
}


const X f6()
{
  return X(0);
}


void f7(X & x)
{
  x.modify();
}



X f8(bool x, int y)
{
  if(x || (y == 2)) {
    return X(y);
  }
  
  return X(0);
}


int main()
{
  f5().operator=(X(1));
  f5().modify();
  f8(false, 5).operator=(X(2));
}
