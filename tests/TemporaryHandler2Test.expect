  inline ~Base() noexcept
  {
    std::operator<<(std::cout, "Base dtor").operator<<(std::endl);
  }
  
};



class Foo : public Base
{
  
  public: 
  inline ~Foo() noexcept
  {
    std::operator<<(std::cout, "Foo dtor").operator<<(std::endl);
  }
  
};



Base return_base()
{
  return {};
}

Foo return_foo()
{
  return {{}};
}


int main2()
{
  const Base & b = {static_cast<const Base&>(return_foo())};
  return 2;
}


